{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": false,
        "module": "commonjs",
        "newLine": "LF",
        "noEmit": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2019",
        "watch": false
    },
    "exclude": ["node_modules", "test", ".vscode", "doc"]
}
